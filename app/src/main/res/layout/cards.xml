<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        >

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Line 1"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/monthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleText"
            android:layout_marginStart="1dp"
            android:text="Line 2"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleText"
            android:layout_marginStart="1dp"
            android:layout_toRightOf="@id/monthText"
            android:text=""
            android:textSize="15sp" />
        <TextView
            android:id="@+id/dayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleText"
            android:layout_marginStart="1dp"
            android:layout_toRightOf="@id/slash"
            android:text="Line 3"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/hourText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleText"
            android:layout_toRightOf="@id/dayText"
            android:layout_marginStart="1dp"
            android:paddingLeft="15dp"
            android:text="Line 4"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleText"
            android:layout_marginStart="1dp"
            android:layout_toRightOf="@id/hourText"
            android:text=""
            android:textSize="15sp" />
        <TextView
            android:id="@+id/minuteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleText"
            android:layout_marginStart="1dp"
            android:layout_toRightOf="@id/colon"
            android:text="Line 5"
            android:textSize="15sp" />
        <ImageButton
            android:id="@+id/optionsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_more_vert_black_24px"
            android:visibility="visible"/>
        <Button
            android:id="@+id/deleteEventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/optionsButton"
            android:layout_alignParentTop="true"
            android:text="Delete"
            android:visibility="gone"/>
        <Button
            android:id="@+id/modifyEventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/deleteEventButton"
            android:text="Edit"
            android:visibility="gone"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
